    <div id="message"></div>

    <div style="margin-top: 20px;">
        <button class="btn-fosil" onclick="updateEnv('fosil')">Gunakan Batu Bara/Minyak</button>
        <button class="btn-alternatif" onclick="updateEnv('alternatif')">Gunakan Panel Surya/Angin</button>
    </div>
    
    <button onclick="resetSim()" style="margin-top: 30px; background: #ddd;">Reset Simulasi</button>
