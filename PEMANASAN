<script>
    let temp = 15;
    let co2 = 400;
    const earthEmoji = document.getElementById('earth');

    function updateEnv(type) {
        if (type === 'fosil') {
            temp += 0.5;
            co2 += 20;
            document.getElementById('message').innerText = "âš ï¸ Emisi karbon meningkat! Suhu naik.";
        } else {
            temp = Math.max(15, temp - 0.2);
            co2 = Math.max(400, co2 - 5);
            document.getElementById('message').innerText = "âœ… Energi bersih digunakan. Tekanan pada atmosfer berkurang.";
        }
        updateUI();
    }

    function updateUI() {
        document.getElementById('temp').innerText = temp.toFixed(1);
        document.getElementById('co2').innerText = co2;

        // Perubahan visual Bumi
        if (temp > 20) {
            earthEmoji.innerText = "ğŸ¥µ";
            document.body.style.background = "#fee2e2";
        } else if (temp > 17) {
            earthEmoji.innerText = "ğŸ˜Ÿ";
            document.body.style.background = "#ffedd5";
        } else {
            earthEmoji.innerText = "ğŸŒ";
            document.body.style.background = "#f0f9ff";
        }
    }

    function resetSim() {
        temp = 15; co2 = 400;
        document.getElementById('message').innerText = "";
        updateUI();
    }
</script>

